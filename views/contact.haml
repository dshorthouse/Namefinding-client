%h1 Contact Us
%form.email_form{:action => "/contact", :method => "post", :enctype => "multipart/form-data"}
  %fieldset
    %legend Email Form
    %label{ :for => 'name' } Your Name
    %input#name.text{ :type => 'text', :name => 'name' }
    %label{ :for => 'email' } Email Address
    %input#email.text{ :type => 'email', :name => 'email' }
    %label{ :for => 'message' } Message
    %textarea#message{ :name => 'message' }
  %fieldset.buttons
    %legend Buttons
    %input.submit{ :type => 'submit', :value => 'Send Email' }


-content_for :domready do
  = "$('.email_form').submit(function(){"
  = "  return EmailForm.validate( $(this) );"
  = "});"