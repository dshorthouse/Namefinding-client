%form{:id => "email_form", :action => "/contact", :method => "post", :enctype => "multipart/form-data"}
  %h3 Contact Us
  %fieldset
    %legend Contact Us
    %label{ :for => 'name' } Your Name
    %input.text{ :type => 'text', :id => 'name', :name => 'name' }
    %label{ :for => 'email' } Email Address
    %input.text{ :type => 'text', :id => 'email', :name => 'email' }
    %label{ :for => 'message' } Message
    %textarea{ :id => 'message', :name => 'message' }
  %fieldset.buttons
    %legend Buttons
    %a.cancel{ :href => '/' } Cancel
    %input.submit{ :type => 'submit', :value => 'Send Email' }
